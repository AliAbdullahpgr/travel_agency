// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

enum AdminRole {
  SUPER_ADMIN
  EDITOR
}

enum TourCategory {
  umre
  hac
  kultur
}

enum TourCurrency {
  TRY
  USD
  EUR
}

enum InquiryStatus {
  PENDING
  APPROVED
  REJECTED
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  username      String?      @unique
  passwordHash  String?
  role          AdminRole    @default(EDITOR)
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  cmsSections   CmsSection[] @relation("CmsSectionUpdatedBy")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Inquiry {
  id              String        @id @default(cuid())
  fullName        String
  phone           String
  email           String?
  city            String?
  country         String?
  plannedMonth    String
  duration        String?
  departureCity   String?
  tourCategory    TourCategory?
  adults          Int?
  children        Int?
  notes           String?
  consentAccepted Boolean
  status          InquiryStatus @default(PENDING)
  reviewedAt      DateTime?
  createdAt       DateTime      @default(now())

  @@index([status, createdAt])
  @@index([createdAt])
}

model CmsSection {
  id          String   @id @default(cuid())
  key         String   @unique
  data        Json
  updatedAt   DateTime @updatedAt
  updatedById String?
  updatedBy   User?    @relation("CmsSectionUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)

  @@index([updatedAt])
}

model Tour {
  id                   String              @id @default(cuid())
  slug                 String              @unique
  title                String
  category             TourCategory
  durationDays         Int
  priceFrom            Int
  currency             TourCurrency
  heroImage            String
  shortBlurb           String
  seoTitle             String
  seoDescription       String
  isPublished          Boolean             @default(true)
  isLandingFeatured    Boolean             @default(false)
  landingFeaturedOrder Int?
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  badges               TourBadge[]
  itinerarySteps       TourItineraryStep[]
  includes             TourInclude[]
  excludes             TourExclude[]
  faqs                 TourFaq[]
  galleryImages        TourGalleryImage[]

  @@index([category, isPublished])
  @@index([isLandingFeatured, landingFeaturedOrder])
}

model TourBadge {
  id     String @id @default(cuid())
  tourId String
  label  String
  order  Int
  tour   Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}

model TourItineraryStep {
  id          String @id @default(cuid())
  tourId      String
  day         String
  title       String
  description String
  order       Int
  tour        Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}

model TourInclude {
  id     String @id @default(cuid())
  tourId String
  item   String
  order  Int
  tour   Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}

model TourExclude {
  id     String @id @default(cuid())
  tourId String
  item   String
  order  Int
  tour   Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}

model TourFaq {
  id       String @id @default(cuid())
  tourId   String
  question String
  answer   String
  order    Int
  tour     Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}

model TourGalleryImage {
  id       String @id @default(cuid())
  tourId   String
  imageUrl String
  order    Int
  tour     Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId, order])
}
